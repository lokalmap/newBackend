#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../strongloop/node_modules/loopback-sdk-angular-cli/bin/lb-ng.js" "$@"
  ret=$?
else 
  node  "$basedir/../strongloop/node_modules/loopback-sdk-angular-cli/bin/lb-ng.js" "$@"
  ret=$?
fi
exit $ret
